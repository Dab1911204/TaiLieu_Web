htm 
    head 
        title= title
        link(rel='stylesheet', href='/css/style.css')
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    body
        h1= mess
        h1 Hello World!
        p This is an example of using Pug with Express.
        img(src="/images/logo.svg", alt="")

        ul 
            li Item 1
            li Item 2
            li Item 3

        table 
            thead
                tr
                    th Header 1
                    th Header 2
            tbody
                tr
                    td Data 1
                    td Data 2
                tr
                    td Data 3
                    td Data 4
        
        p This is a <b>paragraph</b> with a
        p This is a <i>paragraph</i> with a <a href="https://expressjs.com">link</a>.
        p This is a <span class="text-primary">paragraph</span> with a <span class="text-danger">span</span>.

        - var items = ['Item A', 'Item B', 'Item C'];
        ul
            each item in items
                li= item

        - var name = 'John Doe';
        p Hello, #{name}!
        p= name

        - var htmlLink = '<a href="https://expressjs.com">Click here</a>';
        div(class="html-link")
            p= htmlLink
            p This is a link: 
            p!= htmlLink
            p !{htmlLink}

        - 
            var infoUser = {
                title: 'Conditional Rendering',
                message: 'This is a conditional rendering example.',
                phone: '123-456-7890',
            };
        h2= infoUser.title
        if infoUser.phone
            p= infoUser.phone
        else 
            p No phone available.

        p số điện thoại: #{infoUser.phone ? infoUser.phone : 'Chưa có số điện thoại'}

        - var statusAccount = 'initial'
        case statusAccount
            when 'initial'
                p Tài khoản mới tạo
            when 'active'
                p Tài khoản đang hoạt động
            when 'inactive'
                p Tài khoản không hoạt động
            default
                p Tài khoản không xác định

        ul 
            -for (var i = 1; i <= 5; i++)
                li Item #{i}


        button(class="btn btn-primary") Click Me!
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
