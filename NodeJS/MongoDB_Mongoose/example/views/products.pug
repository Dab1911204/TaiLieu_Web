extends layout/default.pug
include mixins/box_head.pug
block main
    +box-head('Danh sách sản phẩm', 'This is the home page of our website.')

    ul 
        each product in products
            li
                a(href=`/products/${product._id}`) #{product.title}
                span #{product.price} VND
                span #{product.description}